<%= render "show_projects_members" %>
<h4>Time Sheets</h4>
<table class="table-bordered">
	<thead>
	  <tr>
	    <td>User</td>
	    <td>Project</td>
	    <td>Week Start Date</td>
	    <td>Week End Date</td>
	    <td>Total Hours</td>
	    <td colspan="2">Actions</td>
	  </tr>
	</thead>

	<tbody>
		<% @time_entries.each do |time_entry| %>
			<tr>
			  <td><%= time_entry.user.email%></td>
			  <td><%= time_entry.project.name%></td>
			  <td><%= time_entry.start_date%></td>
			  <td><%= time_entry.end_date%></td>
			  <td><%= time_entry.hours%></td>
			  <% if !time_entry.is_approved %>
			    <td colspan="2"><%= link_to "Approve", approve_time_sheets_path(id: time_entry), class: "btn btn-xs btn-success" %>
			      <%= link_to "Reject", reject_time_sheets_path(id: time_entry), class: "btn btn-xs btn-danger" %>
			    </td>
			   <% else %>
			      <td colspan="2">
			      	Approved
			      </td>
			   <% end %>  
			</tr>
		<% end %>
	</tbody>
</table>