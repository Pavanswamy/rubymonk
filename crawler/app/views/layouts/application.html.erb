<!DOCTYPE html>
<html>
  <head>
    <title> AssignProjects </title>
    <%= stylesheet_link_tag 'application', media: 'all',
                                           'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Progton Time Sheet", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">

<% if user_signed_in? %>
             
              <% if current_user.is_admin %>

                <% if can? :Projects, @Projects %>
                  <li><%= link_to "Projects", projects_path %></li>
                <% end %>

                <% if can? :Users, @AssignProjects %>
                 <li><%= link_to "Users", users_path %></li>
                <% end %>

               
             
              <% end %>

              
              <% if can? :Time_entry, @AssignProjects %>
                  <li><%= link_to "Time Entry", time_entry_path %></li>
                <% end %>

                <% if cannot? :Assign_members, @AssignProjects %>
                  <li><%= link_to "Assign_members", assign_memeber_path%></li>
                <% end %> 

              <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>

            <% else %>
              <li><%= link_to "Sign In", new_user_session_path %></li>
              <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <% end %>
                
          

          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>
  </body>
</html>