<%= form_for @assign_projects, :html => { :class => "form-horizontal assign_projects" } do |f| %>

    <% if @assign_projects.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@assign_projects.errors.count, "error") %> prohibited this assign_projects from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @assign_projects.errors.full_messages.each do |msg| %>
